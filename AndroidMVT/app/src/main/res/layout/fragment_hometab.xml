<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_login_protect"
        style="@style/FullLineSettingCardStyle">
        <TextView
            style="@style/FullLineSettingTextViewStyle"
            android:text="Login Protect Demo"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_mock_loading"
        style="@style/FullLineSettingCardStyle">
        <TextView
            style="@style/FullLineSettingTextViewStyle"
            android:text="Mock Loading Demo"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_toast"
        style="@style/FullLineSettingCardStyle">
        <TextView
            style="@style/FullLineSettingTextViewStyle"
            android:text="Toast Demo"/>
    </android.support.v7.widget.CardView>

</LinearLayout>